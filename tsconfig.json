{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "outDir": "./dist/",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "sourceMap": true,
    "allowJs": true,
    "types": [
      "mocha"
    ],
    "typeRoots": [
      "node_modules",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}